{
    "manifest_version": 3,
    "name": "圖片檢測擴充功能",
    "version": "1.2",
    "description": "圖片檢測、網站檢測集成插件",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage",
        "scripting",
        "tabs",  
        "notifications"
    ],
    "host_permissions": [  
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ], 
            "js": [
                "contentScript.js",
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "48": "icon.png"
    }
}