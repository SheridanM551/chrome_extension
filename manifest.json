{
    "manifest_version": 3,
    "name": "圖片檢測擴充功能",
    "version": "1.0",
    "description": "右鍵點擊圖片時，增加檢測選項並擷取圖片。",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage",
        "notifications"
    ],
    "host_permissions": [  
        "https://www.virustotal.com/*" 
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ], 
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "48": "icon.png"
    }
}